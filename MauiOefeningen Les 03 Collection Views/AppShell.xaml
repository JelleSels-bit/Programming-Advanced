    xmlns:Views="clr-namespace:MauiOefeningen.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiOefeningen">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate Views:MainPage}"
