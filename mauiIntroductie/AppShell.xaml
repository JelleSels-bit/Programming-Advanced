<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mauiIntroductie.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:mauiIntroductie.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="mauiIntroductie">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:homePage}"
        Route="homePage" />

    <ShellContent
       Title="Labels"
       ContentTemplate="{DataTemplate views:LabelPage}"
       Route="LabelPage" />

    <ShellContent
   Title="StackLayOutPage"
   ContentTemplate="{DataTemplate views:StackLayOutPage}"
   Route="StackLayOutPage" />


    <ShellContent
Title="FotoPage"
ContentTemplate="{DataTemplate views:FotoPage}"
Route="FotoPage" />
</Shell>
