<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiIntroductie.Views.LabelPage"
             Title="LabelPage">
    <Grid ColumnDefinitions="*,*"
		  RowDefinitions="*,*,*"
          BackgroundColor="LightGray"
          Padding="10">
        <Label Grid.Row="0" 
               Grid.ColumnSpan="2"
               Text="Voorbeeld Labels" 
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               HeightRequest="40"
               FontSize="Large"/>

        <Label Grid.Row="1" 
               Grid.Column="0"
               Text="Voorbeeld1" 
               FontAttributes="Bold"/>

        <Label Grid.Row="2" 
               Grid.Column="0"
               Text="Voorbeeld2" 
               TextColor="#FFFFFF"/>

        <Label Grid.Row="1" 
               Grid.Column="1"
               Text="Voorbeeld3" />

        <Label Grid.Row="2" 
               Grid.Column="1"
               Text="Voorbeeld4"/>
    </Grid>
</ContentPage>