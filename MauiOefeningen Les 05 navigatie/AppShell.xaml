<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiOefeningen.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Views="clr-namespace:MauiOefeningen.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiOefeningen">


    <TabBar>
        <Tab Title="🏠 Home">
            <ShellContent
                Title="MainPage"
                ContentTemplate="{DataTemplate Views:MainPage}"
                Route="MainPage" />

        </Tab>


        <Tab Title="Getallen oefeningen">
            <ShellContent
            Title="Getallen 1"
            ContentTemplate="{DataTemplate Views:GetallenDoorgeven1Page}"
            Route="GetallenDoorgeven1Page" />

            <ShellContent
            Title="Getallen 2"
            ContentTemplate="{DataTemplate Views:GetallenDoorgeven2Page}"
            Route="GetallenDoorgeven2Page" />
        </Tab>

        <Tab Title="Personene oefening">
            <ShellContent
            Title="PersoonIngevenPage"
            ContentTemplate="{DataTemplate Views:PersoonIngevenPage}"
            Route="PersoonIngevenPage" />

            <ShellContent
            Title="PersonenTonenPage"
            ContentTemplate="{DataTemplate Views:PersonenTonenPage}"
            Route="PersonenTonenPage" />
        </Tab>
            
        
        
        
    </TabBar>
    

</Shell>
