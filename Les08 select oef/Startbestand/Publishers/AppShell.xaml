<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Publishers.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Publishers.Views"
       Shell.FlyoutBehavior="Flyout"
       Title="Publishers">

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate views:MainPage}"
                  Route="MainPage" />
    <ShellContent Title="Stores"
                  ContentTemplate="{DataTemplate views:StoresPage}"
                  Route="StoresPage" />
    <ShellContent Title="Employees"
                  ContentTemplate="{DataTemplate views:EmployeesPage}"
                  Route="EmployeesPage" />
</Shell>