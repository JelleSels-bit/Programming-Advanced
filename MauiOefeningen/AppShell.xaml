<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiOefeningen.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Views="clr-namespace:MauiOefeningen.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiOefeningen">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate Views:MainPage}"
        Route="MainPage" />

    <ShellContent
    Title="Naamtonen"
    ContentTemplate="{DataTemplate Views:NaamTonenPage}"
    Route="NaamTonenPage" />

    <ShellContent
    Title="VakPage"
    ContentTemplate="{DataTemplate Views:VakPage}"
    Route="VakPage" />

    <ShellContent
    Title="AfbeeldingenPage"
    ContentTemplate="{DataTemplate Views:AfbeeldingenPage}"
    Route="AfbeeldingenPage" />

</Shell>
