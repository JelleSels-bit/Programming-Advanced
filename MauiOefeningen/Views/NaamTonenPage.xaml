<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiOefeningen.Views.NaamTonenPage"
             Title="NaamTonen">
    <VerticalStackLayout>

        <HorizontalStackLayout Spacing="0" >
            
            <Label 
                Text="Geef een naam in: " Padding="15"
                />
            
            <Entry Placeholder="Naam" Margin="5" ></Entry>

       
            
           
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="5" >
            <Label 
         Text="Geef een getal in: "  Padding="15"></Label>
            <Entry Placeholder="Getal" Margin="5" ></Entry>


       
        </HorizontalStackLayout>

        <HorizontalStackLayout  Spacing="10"
           Margin="10" 
            >
            <Button Text="Naam tonen" ></Button>
            <Button Text="Getal tonen" ></Button>


        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="resultaat" Padding="10" ></Label>
        </HorizontalStackLayout> 
    </VerticalStackLayout>
</ContentPage>