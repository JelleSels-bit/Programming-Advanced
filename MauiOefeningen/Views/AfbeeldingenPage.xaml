<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiOefeningen.Views.AfbeeldingenPage"
             Title="Afbeelding">
    <VerticalStackLayout Padding="20" Spacing="15" >
        <HorizontalStackLayout >

            <Label Text="Selecteer een getal: " Margin="0,0,10,0" FontSize="Small"></Label>
            <Label Text="getal"  FontSize="Small"  Margin="0,0,10,0"></Label>
            <Stepper Maximum="5" Minimum="1" Increment="1"></Stepper>
            
        </HorizontalStackLayout>

        <Button Text="Afbeelding tonen" HorizontalOptions="Start" ></Button>
        <Image Source="dotnet_bot.png" HorizontalOptions="Start" WidthRequest="200" ></Image>


    </VerticalStackLayout>
</ContentPage>