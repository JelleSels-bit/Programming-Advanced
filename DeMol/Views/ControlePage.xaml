<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DeMol.ViewModels"
             x:DataType="viewmodel:ControleViewModel"
             x:Class="DeMol.Views.ControlePage"
             Title="{Binding Title}">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Entry Text="Naam" Placeholder="Geef een voornaam in"/>
        <Button Text="Controleer" WidthRequest="200"/>
    </VerticalStackLayout>
</ContentPage>